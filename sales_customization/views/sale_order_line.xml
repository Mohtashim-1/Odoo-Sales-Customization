<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_line_inherit_serial_number" model="ir.ui.view">
        <field name="name">sale.order.line.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_template_id']" position="after">
                <field name="launch_date" optional="show" />
                <!-- <field name="product_code" /> -->
                <field name="image" widget="image" options="{'size': [60, 60]}" optional="show"/>

                <!-- <field name="image" /> -->
                <field name="hs_code_id" optional="show"/>
                <field name="packaging_detail_id" optional="show" />
                <field name="length" optional="show" />
                <field name="width" optional="show" />
                <field name="height" optional="show"/>
                <field name="net_weight" optional="show" />
                <field name="gross_weight" optional="show" />
                <field name="cbm" optional="show" />
                <field name="order_cbm" optional="show" />
                <field name="fcl_20" optional="show" />
                <field name="fcl_40" optional="show" />
                <field name="shelf_life" optional="show" />
                <field name="custom_price" optional="show"  />
                <field name="no_of_ctn" optional="show"  />
                <field name="lbs_oz" optional="show"  />

            </xpath>
        </field>
    </record>
</odoo>
