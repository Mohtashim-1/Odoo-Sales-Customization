<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="commercial_invoice_report" name="Commercial Invoice Report" t-name="sales_customization.commercial_invoice_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <!-- Header Section -->
                            <h3 style="text-align:center;">COMMERCIAL INVOICE</h3>
                            <p><strong>Invoice No.:</strong> <span t-esc="doc.name"/></p>
                            <p><strong>Dated:</strong> <span t-esc="doc.date_order.strftime('%d-%b-%Y')"/></p>

                            <!-- Shipment Details Section -->
                            <table class="table table-condensed" style="width:100%; margin-top:20px;">
                                <tr>
                                    <td><strong>CARTONS OF VITAL BRAND TEA:</strong></td>
                                    <td t-esc="doc.total_qty"/>
                                </tr>
                                <tr>
                                <td>
                                SHIPPED IN SOUND CONDITION PER S.S.CSCL JUPITER
                                </td>
                                <td>VOYAGE NO.</td>
                                <td t-esc="doc.voyage"/>
                                </tr>
                                <tr>
                                    <td><strong>Container No:</strong></td>
                                    <td t-esc="doc.container_no or 'CMAU5640324'"/>
                                    <td><strong>Date:</strong></td>
                                    <td>22-MAY-24</td>
                                </tr>
                                <tr>
                                    <td><strong>From:</strong></td>
                                    <td>Karachi - Pakistan</td>
                                    <td><strong>To:</strong></td>
                                    <td>SOUTHAMPTON UK</td>
                                </tr>
                            </table>

                            <!-- Consignee Information -->
                            <p><strong>Consignee's Address:</strong></p>
                            <p><span t-esc="doc.partner_shipping_id.display_name"/>
                            <span t-esc="doc.partner_shipping_id.street"/>
                            <span t-esc="doc.partner_shipping_id.city"/>,
                            <span t-esc="doc.partner_shipping_id.country_id.name"/></p>

                            <!-- Product Details Table -->
                            <table class="table table-condensed" style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                                <thead>
                                    <tr style="background-color: #f2f2f2;">
                                        <th style="padding: 4px; border: 1px solid #ddd;">S #</th>
                                        <th style="padding: 4px; border: 1px solid #ddd;">Qty</th>
                                        <th style="padding: 4px; border: 1px solid #ddd;">Description</th>
                                        <th style="padding: 4px; border: 1px solid #ddd;">HS Code</th>
                                        <th style="padding: 4px; border: 1px solid #ddd;">Weight (KG)</th>
                                        <th style="padding: 4px; border: 1px solid #ddd;">Unit Price (£/CTN)</th>
                                        <th style="padding: 4px; border: 1px solid #ddd;">Amount (£)</th>
                                    </tr>
                                </thead>
                                <tbody style="font-size: 12px;">
                                        <t t-foreach="enumerate(doc.order_line, start=1)" t-as="line">
                                            <tr>
                                                <td style="padding: 4px; border: 1px solid #ddd;"><t t-esc="line[0]"/></td>
                                                <td style="padding: 4px; border: 1px solid #ddd;"><t t-esc="line[1].product_uom_qty"/></td>
                                                <td style="padding: 4px; border: 1px solid #ddd;"><t t-esc="line[1].product_id.display_name"/></td>
                                                <td style="padding: 4px; border: 1px solid #ddd;"><t t-esc="line[1].hs_code_id.display_name"/></td>
                                                <td style="padding: 4px; border: 1px solid #ddd;"><t t-esc="line[1].product_id.weight"/></td>
                                                <td style="padding: 4px; border: 1px solid #ddd;"><t t-esc="line[1].price_unit"/></td>
                                                <td style="padding: 4px; border: 1px solid #ddd;"><t t-esc="line[1].price_subtotal"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="2" style="padding: 4px; border: 1px solid #ddd;">
                                                <span t-field="doc.total_qty"/> CARTONS
                                            </td>
                                            <td colspan="5" style="padding: 4px; border: 1px solid #ddd; text-align: right;"><strong>Total FOB Value in CNF:</strong></td>
                                            <td style="padding: 4px; border: 1px solid #ddd;">
                                            <span t-field="doc.total"/>
                                            </td>
                                        </tr>
                                    </tfoot>
                            </table>

                            <!-- Total Values Section -->
                            

                            <!-- Footer Section -->
                            <div style="margin-top:20px;">
                                <p>The Exporter (EASTERN PRODUCTS PVT LIMITED) declares that the goods... </p>
                                <p>Gross Weight in KGS: 11,388.35</p>
                            </div>

                            <div style="margin-top:20px;">
                                <div>
                                    NET WEIGHT IN KGS
                                    <span t-field="doc.total_net_weight"/>
                                </div>
                                <div>
                                    GROSS WEIGHT IN KGS
                                    <span t-field="doc.total_gross_weight"/>
                                </div>

                            </div>
                        </div>

                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
