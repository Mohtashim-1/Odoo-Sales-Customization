<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="bl_instruction" name="Commercial Invoice Report" t-name="sales_customization.bl_instruction">
            <t t-call="web.external_layout">
                <main>
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <div>
                                <strong>SHIPPER/EXPORTER</strong><br/>
                                <span>M/S EASTERN PRODUCTS PVT. LTD</span><br/>
                                H/O : PLOT NO. 50 &amp; 56, VITAL HOUSE,<br/>
                                HAROONABAD 62100 - PAKISTAN<br/>
                                TEL: +92 63 111 037 037
                            </div>
                            <br/>
                            <div>
                                <strong>CONSIGNEE</strong><br/>
                                TO THE ORDER OF:<br/>
                                <strong>MEEZAN BANK LTD</strong><br/>
                                <p><strong>Invoice No.:</strong> <span t-esc="doc.name"/></p>
                            </div>
                            <br/>
                            <div>
                                <strong>NOTIFY PARTY PLACE OF DELIVERY:</strong><br/>
                                M/S ADVANCE FOOD INTL, INC.<br/>
                                U.S.A<br/>
                                TEL: +1(718) 482 0123
                            </div>
                            <br/>
                            <div>
                                LOADING PORT: <span t-field="doc.loading_port"/> 
                                PORT OF DISCHARGE: <span t-field="doc.port_of_discharge"/>
                            </div>
                            <br/>
                            <div>
                                <strong>MARKS &amp; NUMBERS DESCRIPTION OF PACKAGES AND GOODS</strong><br/>
                                SAID TO CONTAIN<br/>
                            </div>
                            <table style="width: 100%; margin-top: 10px;">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Type</th>
                                        <th>Package</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.order_line" t-as="item">
                                        <tr>
                                            <td><span t-field="item.name"/></td>
                                            <td></td>
                                            <td><span t-field="item.packaging_detail_id"/></td>
                                            <td><span t-field="item.product_uom_qty"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <br/>
                            <div>
                                <strong>NON COMMERCIAL VALUE</strong><br/>
                                <ul>
                                    <li>ADVERT - TEA BOILER-10 LTS</li>
                                    <li>VITAL - (GIFT PACKS - ITEMS)-Paper Cups</li>
                                    <li>VITAL - (GIFT PACKS - ITEMS)-ELECTRIC KETTLE</li>
                                    <li>VITAL - (GIFT PACKS - ITEMS)-Tee Shirts / CAPS</li>
                                    <li>ADVERT - STANDIES</li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </main>
            </t>
        </template>
    </data>
</odoo>
