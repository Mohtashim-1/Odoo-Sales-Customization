<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="packaging_list" name="Commercial Invoice Report" t-name="sales_customization.packaging_list">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" style="font-family: Arial, sans-serif; margin: 0; padding: 30px;">
                        <!-- Header Section -->
                        <div style="text-align: center;">
                            <h1 style="font-size: 24px; font-weight: bold;">Packing List</h1>
                            <h3 style="font-size: 16px; color: #555;">Dated: <t t-esc="doc.date_order"/></h3>
                            <h3 style="font-size: 16px; color: #555;">Order No: <t t-esc="doc.name"/></h3>
                        </div>

                        <div style="margin-top: 30px;">
                            <p><strong>Buyer:</strong> <t t-esc="doc.partner_id.name"/></p>
                            <p><strong>Container CBM:</strong> <t t-esc="doc.container_cbm"/></p>
                            <p><strong>Destination:</strong> <t t-esc="doc.destination"/></p>
                            <p><strong>Delivery:</strong> <t t-esc="doc.delivery"/></p>
                        </div>

                        <!-- Products Table -->
                        <table class="table table-condensed" style="width: 100%; border-collapse: collapse; margin-top: 20px; border: 1px solid #ddd;">
                            <thead style="background-color: #f4f4f4; font-weight: bold; text-align: left;">
                                <tr>
                                    <th style="padding: 8px; border: 1px solid #ddd;">S.NO.</th>
                                    <th style="padding: 8px; border: 1px solid #ddd;">DESCRIPTION</th>
                                    <th style="padding: 8px; border: 1px solid #ddd;">PACKING</th>
                                    <th style="padding: 8px; border: 1px solid #ddd;">NO OF CTN</th>
                                    <th style="padding: 8px; border: 1px solid #ddd;">QTY</th>
                                </tr>
                            </thead>
                            <tbody style="font-size: 14px;">
                                <t t-foreach="enumerate(doc.order_line, start=1)" t-as="line">
                                    <tr>
                                        <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="line[0]"/></td>
                                        <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="line[1].name"/></td>
                                        <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="line[1].packaging_detail_id.display_name"/></td>
                                        <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="line[1].no_of_ctn"/></td>
                                        <td style="padding: 8px; border: 1px solid #ddd;"><t t-esc="line[1].product_uom_qty"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Additional Information Section -->
                        <div style="margin-top: 30px;">
                            <h4 style="font-size: 16px; font-weight: bold;">DECLARATION:</h4>
                            <ul style="font-size: 14px; line-height: 1.6;">
                                <li><strong>The container(s) covered by this document has/have been cleaned and is/are free from material of animal and/or plant origin and soil &amp; is free from KHAPRA BEETLE insect.</strong></li>
                            </ul>
                        </div>

                        <div style="margin-top: 30px;">
                            <div style="font-size: 14px; line-height: 1.6; font-weight: bold;">NET WEIGHT IN KGS</div>
                            <div>GROSS WEIGHT IN KGS</div>
                        </div>

                        <!-- Footer Section (optional) -->
                        <div style="margin-top: 50px; text-align: center; font-size: 12px; color: #888;">
                            <p>Company Name | Address | Contact Information</p>
                            <p>www.companywebsite.com</p>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
