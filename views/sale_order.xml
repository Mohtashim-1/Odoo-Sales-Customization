<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="commercial_invoice_report1" name="Commercial Invoice Report" t-name="sales_customization.commercial_invoice_report1">
            <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
        <div class="page">
          <h3>Dated: <t t-esc="doc.date_order"/></h3>
          <h3>Order No: <t t-esc="doc.name"/></h3>
          <p>Name of Buyer: <t t-esc="doc.partner_id"/></p>
          <p>Container CBM: <t t-esc="doc.container_cbm"/></p>
          <p>Destination: <t t-esc="doc.destination"/></p>
          <p>Delivery: <t t-esc="doc.delivery"/></p>

          <!-- Products Table -->
          <table class="table table-condensed" style="width: 100%; border-collapse: collapse; margin-top: 20px;">
            <thead>
              <tr>
                <th>S.NO.</th>
                <th>PRODUCTS</th>
                <th>CTNS</th>
                <th>PKTS</th>
                <th>PACKING</th>
                <th>STATUS</th>
                <th>DESCRIPTION</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="enumerate(doc.order_line, start=1)" t-as="line">
                <tr>
                    <!-- Use the index as Serial No -->
                    <td><t t-esc="line[0]"/></td>
                    <td><t t-esc="line[1].name"/></td>
                    <td><t t-esc="line[1].ctn"/></td>
                    <td><t t-esc="line[1].pkt"/></td>
                    <td><t t-esc="line[1].packaging_detail_id.display_name"/></td>
                    <td><t t-esc="line[1].status"/></td>
                    <td><t t-esc="line[1].description"/></td>
                </tr>
              </t>
            </tbody>
          </table>

          <!-- Additional Info -->
          <h4>Instructions:</h4>
          <ul>
            <li>Foreign Language Instructions: <t t-esc="doc.language_instructions"/></li>
            <li>Lot Code: <t t-esc="doc.lot_code"/></li>
            <li>Producer Code: <t t-esc="doc.producer_code"/></li>
          </ul>
        </div>
      </t>
    </t>
        </template>
    </data>
</odoo>
